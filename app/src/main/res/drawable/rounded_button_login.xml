<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="190dp" />
            <stroke android:width="0.5dp" android:color="@color/colorSecondaryDark" />
            <gradient android:angle="-90" android:startColor="@color/colorSecondary" android:endColor="@color/colorSecondary"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="190dp" />

            <gradient android:angle="-450" android:startColor="@color/colorSecondaryDark" android:endColor="@color/colorSecondaryDark" />
        </shape>
    </item>
</selector>